<main role="main">

  <div class="container general_container">
    
      <div class="intro-content">
        <br>
        <h2>Sign Up</h2>
        <div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.label :name, "Name*" %>
                <%= f.text_field :name, class: "form-control input-md", required: "required" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :email, "Email*" %>
                <%= f.email_field :email, class: "form-control input-sm", pattern: "^[a-zA-Z][-_.a-zA-Z0-9]{3,29}@m(oogle)?emphis.edu$", required: "required" %>
                <em>Email needs to be connected to the UofM: <b>@memphis.edu</b></em>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.label :department, "Department" %>
                <%= f.text_field :department, class: "form-control input-md"  %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :major, "Major" %>
                <%= f.text_field :major, class: "form-control input-md"  %>
              </div>
            </div>

            <div class="control-group">
              <%= f.label :password %>
              <div class="controls">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-sm", required: "required" %>
                 <% if @minimum_password_length %>
                      <p><em>Length should be <%= @minimum_password_length %>-70 characters.</em><br/> 
                      <em>Please include: </em><br/>
                      <em>At least 1 uppercase</em><br/>
                      <em>At least 1 lowercase</em><br/>
                      <em>At least 1 digit</em><br/>
                      <em>At least 1 special character</em></p>
                    <% end %>
              </div>    
            </div> 
            
            <div class="control-group">
              <%= f.label :password_confirmation %><br />
              <div class="controls">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-sm", required: "required" %>
              </div>    
            </div>  

            <br>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
          <% end %>

        </div>
      </div>
  </div>
</main>


