
<% provide(:title, 'User')%>
<script>
    $(document).ready(function(){

        document.body.addEventListener('ajax:success', function(event) {
            var detail = event.detail;
            
            var data = detail[0], status = detail[1], xhr = detail[2];
            console.log(data);
            $('#message_content').val('').change()
            
        });
        
    });
    
</script>
<main role="main" class="container">
<h1> <%= @user.name%> </h1>
    
<div id="left">
  <%= image_tag("1200px-Memphis_Tigers_logo.svg.png", :size => "240x200", :alt => "Memphis Tiger Logo") %>
    <div>
      <br>
      <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#myModal">Send Message</a>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <div class="modal-body">
                <div class="container"><br>
                    <%= form_for @message, remote: true, id: 'message_form', url: send_messages_ajax_path do |f| %>
                    
                        <fieldset>
                            <div style="display:none">
                              <%= f.text_field :sender_id, class: "form-control input-md", value: current_user.id %>
                              <%= f.text_field :recipient_id, class: "form-control input-md", value: @user.id %>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="userid">Message to <%= @user.name%>:</label>
                                <div class="controls">
                                    <%= f.text_area :content, autofocus: true, autocomplete: "email", class: "form-control input-md", required: "required" %>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="send_message"></label>
                                <div class="controls" style="text-align: center">
                                    <button id="send_message" name="send_message" style="width: 200px" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="right">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
        aria-selected="true">Profile</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="review-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review"
        aria-selected="false">Review</a>
    </li>
    
  </ul>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div>
        <br>
        <p>
            <b>Name:</b> <%= @user.name %>
        </p>
        <p>
            <b>Department:</b> <%= @user.department %>
        </p>
        <p>
            <b>Major:</b> <%= @user.major %>
        </p>  
        <p>
            <b>Email:</b> <%= @user.email %>
        </p>
      </div>
    </div>

    <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
      <p><table class="table table-sm">
        <thead>
        <tr>
        
        <th scope="col">Item</th>
        <th scope="col">Review</th>
								<th scope="col">Buyer</th>
        </tr>
        </thead>
      <tbody>
        <% @user.items.each do |record| %>
          <tr>
            <td><%= record.title %></td>
            <% if record.settlement %>
            <td><%= record.settlement.review %></td>
            <td><%= record.settlement.buyer.name %></td>
            <% else%>
            <td>Not Sold. Review Unavaible.</td>
            <td>Not Sold. Buyer Unavaible.</td>
            <% end%>
          </tr>
        <% end %>
      </tbody>
     </table></p>
  
    </div>
  </div>
</div>

    
</main><!-- /.container -->