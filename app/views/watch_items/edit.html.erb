<% provide(:title,'SellBackMart - Edit Watch Item')%>

<main role ="main" class ="container">

<h1>Edit Watch Item </h1>

  <%= form_with model: @watch_item, local:true, html: { multipart: true } do |form| %>

     <div class = "field">
         <%= form.label :title %>
         <%= form.text_field :title, class:'form-control', required: 'required' %>
     </div>

     <div class = "field">
         <%= form.label :category %>
         <%= form.collection_select :category, Category.order(:description), :id,:description, {:prompt=>true}, {:class=>'form-control', :required=>'required'} %>
     </div>

    <div class="form-group">
        <%= form.label :inactive, class: "control-label" %>
        <div class="col-md-4 row"> 
            <label style="margin-right: 8px" class="radio-inline" for="radios-0">Yes</label> 
            <%= form.radio_button :inactive, true, style: "margin-right: 15px" %>
            
            
            <label style="margin-right: 8px" class="radio-inline" for="radios-1">No</label> 
            <%= form.radio_button :inactive, false %>
            
            
            
        </div>
    </div>

    

     <div class = "actions">
         <%= form.submit 'Add', class: 'btn btn-primary' %>
     </div>
  <% end %>

  <p>
    <%= link_to 'Back',watchlist_path %>
  </p>
</main><!-- /.container -->