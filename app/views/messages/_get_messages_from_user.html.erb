
<div class="msg_history">
  <% @messages.each do |message| %>
    <% if message.sender_id == current_user.id %>
      <div class="outgoing_msg">
        <div class="sent_msg">
          <p><%= message.content %></p>
          <span class="time_date"> <%= message.created_at.strftime("%I:%M %p") %>    |    <%= message.created_at.strftime("%B %d") %></span>
        </div>
      </div>
    <% else %>
      <div class="incoming_msg">
        <div class="incoming_msg_img"> <%= image_tag("no_picture.png", :alt => "Memphis Tiger Logo", class: 'img_rounded') %> </div>
        <div class="received_msg">
          <div class="received_withd_msg">
            <p><%= message.content %></p>
            <span class="time_date"> <%= message.created_at.strftime("%I:%M %p") %>   |    <%= message.created_at.strftime("%B %d") %></span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <br>