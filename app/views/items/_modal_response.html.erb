
<div class="modal fade" id="respondModal<%=comment.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <div class="modal-body">
                <div id="signin" class="container tab-pane active"><br>
                    <%= form_tag respond_url method: :post %>
                        <fieldset>
                            <!-- Text input-->
                                
                            <div class="control-group">
                                <label class="control-label" for="userid">Response: <%=comment.id%></label>
                                <div class="controls">
                                <%=hidden_field_tag 'item_id[]', @item.id%>
                                <%=hidden_field_tag 'buyer_comment_id', comment.id%>
                                <%=text_field_tag(:response_text, value = nil, options = {}) %>
                                    <%# <%= check_box_tag 'id[]', '1',required: "required" %>
                                </div>
                            </div>

                            <!-- Button -->
                            <div class="control-group">
                                <label class="control-label" for="signin"></label>
                                <div class="controls" style="text-align: center">
                                    <button id="signin" name="signin" style="width: 200px" class="btn btn-primary">Post</button>
                                </div>
                            </div>
                        </fieldset>
                
                </div>
            </div>
        </div>
    </div>
</div>

