<% provide(:title,'SellBackMart - Edit Item')%>

<main role ="main" class ="container">

<h1>Edit Item </h1>

  <%= form_with model: @item, local:true, html: { multipart: true } do |form| %>
     <div class = "field">
         <%= form.label :image %>
         <%= form.file_field :avatar %>
     </div>

     <div class = "field">
         <%= form.label :more_photos %>
         <%= file_field_tag "images[]", type: :file, multiple: true %>
     </div>


     <div class = "field">
         <%= form.label :title %>
         <%= form.text_field :title, class:'form-control' %>
         <% if @item.errors.full_messages_for(:item).any? %>
           <div class="invalid-feedback">
              <% @item.errors.full_messages_for(:item).each do |error_message| %>
                 <%= error_message %>
              <% end %>
           </div>
         <% end %>
     </div>

     <div class = "field">
         <%= form.label :price %>
         <%= form.text_field :price, class:'form-control' %>
     </div>

     <div class = "field">
         <%= form.label :condition %>
         <%= form.text_field :condition, class:'form-control' %>
     </div>

     <div class = "field">
         <%= form.label :category_id %>
         <%= form.collection_select :category_id, Category.order(:description), :id,:description, {:prompt=>true}, {:class=>'form-control'} %>
     </div>

     <div class = "field">
         <%= form.label :description %>
         <%= form.text_field :description, class:'form-control' %>
     </div>

    <div class="form-group">
        <%= form.label :inactive, class: "control-label" %>
        <div class="col-md-4 row"> 
            <label style="margin-right: 8px" class="radio-inline" for="radios-0">Yes</label> 
            <%= form.radio_button :inactive, true, style: "margin-right: 15px" %>
            
            
            <label style="margin-right: 8px" class="radio-inline" for="radios-1">No</label> 
            <%= form.radio_button :inactive, false %>
            
            
            
        </div>
    </div>

    

     <div class = "actions">
         <%= form.submit 'Post Item', class: 'btn btn-primary' %>
     </div>
  <% end %>

  <p>
    <%= link_to 'Back',catalog_path %>
  </p>
</main><!-- /.container -->