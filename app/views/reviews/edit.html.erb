<% provide(:title,'SellBackMart - Edit Review') %>

<main role ="main" class ="container">

<h1>Edit Review </h1>

 <%= form_with model: @review, local: true do |form| %>

    <div class = "field">
      <%= form.label :description %>
      <%= form.text_area :description, class:'form-control' %>
    </div>

    <div class = "actions">
      <%= form.submit 'Post Item Review', class: 'btn btn-primary' %>
    </div>

  <p>
    <%= link_to 'Back',user_url(@review.user_id) %>
  </p>

  <% end %>
</main><!-- /.container -->