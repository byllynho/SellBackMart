
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <div class="modal-body">
                <div id="signin" class="container tab-pane active"><br>
                    <%= form_for(:user, :url => session_path(:user)) do |f| %>
                        <fieldset>
                            <!-- Sign In Form -->
                            <!-- Text input-->
                                
                            <div class="control-group">
                                <label class="control-label" for="userid">Email:</label>
                                <div class="controls">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-md", required: "required" %>
                                </div>
                            </div>

                            <!-- Password input-->
                            <div class="control-group">
                                <label class="control-label" for="passwordinput">Password:</label>
                                <div class="controls">
                                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-md", required: "required" %>  
                                </div>
                            </div>

                            <!-- Multiple Checkboxes (inline) -->
                            <div class="control-group">
                                <br>
                                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                            </div>

                            <!-- Button -->
                            <div class="control-group">
                                <label class="control-label" for="signin"></label>
                                <div class="controls" style="text-align: center">
                                    <button id="signin" name="signin" style="width: 200px" class="btn btn-primary">Sign In</button>
                                </div>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div>
            <div class="modal-footer">
                New To SellBackMart.com? &nbsp;
                <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-info" %>
            </div>
        </div>
    </div>
</div>

